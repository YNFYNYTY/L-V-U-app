
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<h1>HELLO USERS</h1>

<table class="table table-striped">

	<% unless @users.blank? %>
	    <% @users.each do |u| %>
	    <div class="row">
	      <div class="col-md-2"><%= u.name %></div>
	      	<div class="col-md-2"><%= u.location_id %></div>
	      		<div class="col-md-2"><%= u.visit_id %></div>
	      			<div class="col-md-1"><%= u.premium %></div>
	       	<div class="col-md-1"><%= link_to 'Delete', user_path(u), :method => 'delete', confirm: "Are you sure?" %></div>
	      	<div class="col-md-1"><%= link_to 'Edit', edit_user_path(u) %></div>
	      </div>
	    <% end %>
	  <% end %>

  <strong><%= link_to 'CREATE A NEW USER', new_user_path(@user) %></strong>

</table>






